<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Messages - Admin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .sidebar { min-height: 100vh; background: #343a40; color: #fff; }
        .sidebar a { color: #adb5bd; text-decoration: none; padding: 15px 20px; display: block; border-bottom: 1px solid #4b545c; }
        .sidebar a:hover, .sidebar a.active { background: #495057; color: #fff; border-left: 4px solid #fed700; }
        
        /* Message Styles */
        .msg-unread { background-color: #fff; font-weight: bold; border-left: 4px solid #fed700; }
        .msg-read { background-color: #f8f9fa; color: #6c757d; }
    </style>
</head>
<body>

<div class="d-flex">
    
    <!-- SIDEBAR -->
    <div class="sidebar d-flex flex-column flex-shrink-0 p-3" style="width: 250px;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <span class="fs-4 fw-bold">Electro Admin</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li><a href="/admin"><i class="fas fa-tachometer-alt me-2"></i> Dashboard</a></li>
            <li><a href="/admin/products"><i class="fas fa-box me-2"></i> Products</a></li>
            <li><a href="/admin/orders"><i class="fas fa-shopping-cart me-2"></i> Orders</a></li>
            
            <% if (user.role === 'admin') { %>
                <hr class="border-secondary my-2">
                <small class="text-uppercase text-muted px-3" style="font-size: 10px;">Platform</small>
                <li><a href="/admin/categories"><i class="fas fa-tags me-2"></i> Categories</a></li>
                <li><a href="/admin/users"><i class="fas fa-users me-2"></i> Users</a></li>
                <li><a href="/admin/coupons"><i class="fas fa-ticket-alt me-2"></i> Coupons</a></li>
                <!-- Active Link -->
                <li><a href="/admin/messages" class="active"><i class="fas fa-envelope me-2"></i> Messages</a></li>
            <% } %>
        </ul>
        <hr>
        <div class="dropdown"><a href="/" class="d-flex align-items-center text-white text-decoration-none"><i class="fas fa-home me-2"></i> Back to Store</a></div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="flex-grow-1 p-4">
        <h2 class="mb-4">Support Inbox</h2>

        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="ps-4">Status</th>
                            <th>Sender</th>
                            <th>Subject</th>
                            <th>Date</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (messages.length > 0) { %>
                            <% messages.forEach(msg => { %>
                                <tr class="<%= msg.isRead ? 'msg-read' : 'msg-unread' %>">
                                    <td class="ps-4">
                                        <% if (!msg.isRead) { %>
                                            <span class="badge bg-danger rounded-pill">NEW</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary rounded-pill">Read</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div><%= msg.name %></div>
                                        <small class="text-muted fw-normal"><%= msg.email %></small>
                                    </td>
                                    <td><%= msg.subject || 'No Subject' %></td>
                                    <td><%= new Date(msg.createdAt).toLocaleDateString() %></td>
                                    <td class="text-end pe-4">
                                        <!-- View Modal Trigger -->
                                        <button type="button" class="btn btn-sm btn-primary rounded-circle" 
                                                data-bs-toggle="modal" data-bs-target="#msgModal<%= msg._id %>" title="Read Message">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                        <!-- Toggle Read/Unread -->
                                        <form action="/admin/messages/toggle/<%= msg._id %>" method="POST" class="d-inline">
                                            <button class="btn btn-sm btn-outline-secondary rounded-circle" title="Mark as Read/Unread">
                                                <i class="fas <%= msg.isRead ? 'fa-envelope' : 'fa-envelope-open' %>"></i>
                                            </button>
                                        </form>

                                        <!-- Delete -->
                                        <form action="/admin/messages/delete/<%= msg._id %>" method="POST" class="d-inline" onsubmit="return confirm('Delete this message?');">
                                            <button class="btn btn-sm btn-outline-danger rounded-circle" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                <!-- Message Modal -->
                                <div class="modal fade" id="msgModal<%= msg._id %>" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title"><%= msg.subject %></h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <strong>From:</strong> <%= msg.name %> (<%= msg.email %>)<br>
                                                    <strong>Phone:</strong> <%= msg.phone || 'N/A' %><br>
                                                    <strong>Date:</strong> <%= new Date(msg.createdAt).toLocaleString() %>
                                                </div>
                                                <hr>
                                                <p class="mt-3"><%= msg.message %></p>
                                            </div>
                                            <div class="modal-footer">
                                                <!-- Auto-mark as read button inside modal -->
                                                <% if(!msg.isRead) { %>
                                                    <form action="/admin/messages/toggle/<%= msg._id %>" method="POST">
                                                        <button type="submit" class="btn btn-success">Mark as Read</button>
                                                    </form>
                                                <% } %>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <% }) %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center py-5">No messages found.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>