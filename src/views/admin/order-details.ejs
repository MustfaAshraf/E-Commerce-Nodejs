<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Details - Admin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <style>
        /* 1. Base Setup */
        body { 
            background-color: #f8f9fa; 
            overflow-x: hidden; 
        }

        /* 2. The Wrapper (Flex Container) */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            transition: all 0.3s;
        }

        /* 3. The Sidebar */
        .sidebar {
            min-width: 250px; 
            max-width: 250px;
            min-height: 100vh;
            background: #343a40;
            color: #fff;
            transition: margin 0.3s ease-out;
        }

        /* 4. The "Hidden" State */
        #wrapper.toggled .sidebar {
            margin-left: -250px; 
        }

        /* 5. The Content Area */
        #page-content-wrapper {
            width: 100%;
            flex-grow: 1;
        }

        /* --- Existing Styles --- */
        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
            border-bottom: 1px solid #4b545c;
        }
        .sidebar a:hover, .sidebar a.active {
            background: #495057;
            color: #fff;
            border-left: 4px solid #fed700;
        }
    </style>
</head>
<body>

<div id="wrapper">
    
    <!-- SIDEBAR INCLUDE -->
    <%- include('../layouts/dashboard-sidebar') %>

    <!-- MAIN CONTENT WRAPPER -->
    <div id="page-content-wrapper">
        
        <!-- TOP NAVBAR WITH TOGGLE BUTTON -->
        <nav class="navbar navbar-light bg-white border-bottom px-4 py-3 mb-4 shadow-sm">
            <div class="d-flex align-items-center">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="ms-3">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/dashboard/orders">Orders</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>
        </nav>

        <!-- PAGE CONTENT -->
        <div class="container-fluid px-4">
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">Order #<%= order._id.toString().slice(-6).toUpperCase() %></h2>
                <a href="/dashboard/orders" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i> Back to List
                </a>
            </div>

            <div class="row g-4">
                
                <!-- LEFT COLUMN: Items & Totals -->
                <div class="col-lg-8">
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Items</h5>
                        </div>
                        <div class="card-body">
                            <% order.items.forEach(item => { %>
                                <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                    <!-- Handle missing product (if deleted) -->
                                    <% if(item.productId) { %>
                                        <img src="/uploads/productImages/<%= item.productId.image %>" class="rounded me-3" width="60" height="60" style="object-fit: cover;">
                                    <% } else { %>
                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;"><i class="fas fa-box"></i></div>
                                    <% } %>
                                    
                                    <div class="flex-grow-1">
                                        <h6 class="mb-0"><%= item.name %></h6> <!-- Uses snapshot name -->
                                        <small class="text-muted">Unit Price: $<%= item.priceAtPurchase %></small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">x <%= item.quantity %></div>
                                        <div>$<%= (item.priceAtPurchase * item.quantity).toFixed(2) %></div>
                                    </div>
                                </div>
                            <% }) %>

                            <div class="d-flex justify-content-between pt-2">
                                <span>Subtotal</span>
                                <span>$<%= order.subtotal.toFixed(2) %></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span>Shipping</span>
                                <span>$<%= order.shippingCost.toFixed(2) %></span>
                            </div>
                            <div class="d-flex justify-content-between text-success">
                                <span>Discount</span>
                                <span>-$<%= order.discount.toFixed(2) %></span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between fs-5 fw-bold">
                                <span>Total</span>
                                <span>$<%= order.totalPrice.toFixed(2) %></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RIGHT COLUMN: Customer & Actions -->
                <div class="col-lg-4">
                    
                    <!-- Status Update Card -->
                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Order Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert 
                                <%= order.status === 'delivered' ? 'alert-success' : 
                                   (order.status === 'cancelled' ? 'alert-danger' : 'alert-warning') %> text-center">
                                Current Status: <strong><%= order.status.toUpperCase() %></strong>
                            </div>

                            <form action="/dashboard/orders/<%= order._id %>/status" method="POST">
                                <label class="form-label">Update Status:</label>
                                <select name="status" class="form-select mb-3">
                                    <option value="pending" <%= order.status==='pending' ? 'selected':'' %>>Pending</option>
                                    <option value="confirmed" <%= order.status==='confirmed' ? 'selected':'' %>>Confirmed</option>
                                    <option value="shipped" <%= order.status==='shipped' ? 'selected':'' %>>Shipped</option>
                                    <option value="delivered" <%= order.status==='delivered' ? 'selected':'' %>>Delivered</option>
                                    <option value="cancelled" <%= order.status==='cancelled' ? 'selected':'' %>>Cancelled</option>
                                </select>
                                <button type="submit" class="btn btn-primary w-100 rounded-pill">Update Status</button>
                            </form>
                        </div>
                    </div>

                    <!-- Customer Details -->
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Customer Info</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-light rounded-circle p-3 me-3"><i class="fas fa-user text-primary"></i></div>
                                <div>
                                    <h6 class="mb-0"><%= order.userId ? order.userId.name : 'Guest' %></h6>
                                    <small class="text-muted"><%= order.userId ? order.userId.email : 'No email' %></small>
                                </div>
                            </div>
                            <hr>
                            <h6>Shipping Address</h6>
                            <p class="text-muted small mb-0">
                                <%= order.shippingAddress.street %><br>
                                <%= order.shippingAddress.city %>, <%= order.shippingAddress.country %><br>
                                <%= order.shippingAddress.postalCode %>
                            </p>
                            <hr>
                            <h6>Payment Method</h6>
                            <span class="badge bg-secondary"><%= order.paymentMethod %></span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<!-- TOGGLE SCRIPT -->
<script>
    const toggleButton = document.getElementById("menu-toggle");
    const wrapper = document.getElementById("wrapper");

    toggleButton.onclick = function() {
        wrapper.classList.toggle("toggled");
    };
</script>

</body>
</html>