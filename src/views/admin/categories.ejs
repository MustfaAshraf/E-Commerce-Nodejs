<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Manage Categories - Admin</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <style>
        /* 1. Base Setup */
        body { 
            background-color: #f8f9fa; 
            overflow-x: hidden; 
        }

        /* 2. The Wrapper (Flex Container) */
        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            transition: all 0.3s;
        }

        /* 3. The Sidebar */
        .sidebar {
            min-width: 250px; 
            max-width: 250px;
            min-height: 100vh;
            background: #343a40;
            color: #fff;
            transition: margin 0.3s ease-out;
        }

        /* 4. The "Hidden" State */
        #wrapper.toggled .sidebar {
            margin-left: -250px; 
        }

        /* 5. The Content Area */
        #page-content-wrapper {
            width: 100%;
            flex-grow: 1;
        }

        /* --- Sidebar Links --- */
        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
            border-bottom: 1px solid #4b545c;
        }
        .sidebar a:hover, .sidebar a.active {
            background: #495057;
            color: #fff;
            border-left: 4px solid #fed700;
        }
    </style>
</head>
<body>

<div id="wrapper">
    
    <!-- SIDEBAR INCLUDE -->
    <%- include('../layouts/dashboard-sidebar') %>

    <!-- MAIN CONTENT WRAPPER -->
    <div id="page-content-wrapper">
        
        <!-- TOP NAVBAR WITH TOGGLE BUTTON -->
        <nav class="navbar navbar-light bg-white border-bottom px-4 py-3 mb-4 shadow-sm">
            <div class="d-flex align-items-center">
                <button class="btn btn-primary" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="ms-3">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Categories</li>
                    </ol>
                </nav>
            </div>
        </nav>

        <!-- PAGE CONTENT -->
        <div class="container-fluid px-4">
            <h2 class="mb-4">Categories</h2>

            <!-- Error Alert -->
            <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>

            <div class="row g-4">
                <!-- LIST -->
                <div class="col-md-8">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-white py-3">
                            <h5 class="mb-0">Existing Categories</h5>
                        </div>
                        <div class="card-body p-0">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Name</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <tr>
                                                <td class="ps-4 fw-bold"><%= cat.name %></td>
                                                <td class="text-end pe-4">
                                                    <div class="d-flex justify-content-end gap-2">
                                                        <!-- EDIT BUTTON -->
                                                        <a href="/dashboard/categories/edit/<%= cat._id %>" class="btn btn-sm btn-outline-primary rounded-circle" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                                            <i class="fas fa-edit" style="font-size: 12px;"></i>
                                                        </a>

                                                        <!-- DELETE FORM -->
                                                        <form action="/dashboard/categories/delete/<%= cat._id %>" method="POST" onsubmit="return confirm('Delete this category?');">
                                                            <button class="btn btn-sm btn-outline-danger rounded-circle" style="width: 32px; height: 32px; padding: 0; display: flex; align-items: center; justify-content: center;">
                                                                <i class="fas fa-trash" style="font-size: 12px;"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="2" class="text-center py-4">No categories found.</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- ADD FORM -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-header bg-success text-white py-3">
                            <h5 class="mb-0"><i class="fas fa-plus me-2"></i> Add New</h5>
                        </div>
                        <div class="card-body">
                            <form action="/dashboard/categories" method="POST">
                                <div class="mb-3">
                                    <label class="form-label">Category Name</label>
                                    <input type="text" name="name" class="form-control" placeholder="e.g. Headphones" required>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-success">Create Category</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- TOGGLE SCRIPT -->
<script>
    const toggleButton = document.getElementById("menu-toggle");
    const wrapper = document.getElementById("wrapper");

    toggleButton.onclick = function() {
        wrapper.classList.toggle("toggled");
    };
</script>

</body>
</html>