<!DOCTYPE html>
<html lang="en">

    <%- include('../layouts/head') %>

<body>

    <%- include('../layouts/spinner') %>
    <%- include('../layouts/topbar') %>
    <%- include('../layouts/navbar') %>

    <!-- Header -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6"><%= product.name %></h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/products">Shop</a></li>
            <li class="breadcrumb-item active text-white">Details</li>
        </ol>
    </div>

    <!-- Main Content -->
    <div class="container-fluid shop py-5">
        <div class="container py-5">
            
            <!-- Alert System -->
            <% if (typeof query !== 'undefined' && query.error === 'OutOfStock') { %>
                <div class="alert alert-danger alert-dismissible fade show mb-4">
                    <strong>Out of Stock!</strong> We don't have enough quantity.
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <div class="row g-4">
                
                <!-- SIDEBAR -->
                <div class="col-lg-3">
                    <form action="/products" method="GET" class="input-group w-100 mx-auto d-flex mb-4">
                        <input type="search" name="search" class="form-control p-3" placeholder="keywords">
                        <button type="submit" class="input-group-text p-3"><i class="fa fa-search"></i></button>
                    </form>

                    <div class="product-categories mb-4">
                        <h4>Categories</h4>
                        <ul class="list-unstyled">
                            <% if (categories && categories.length) { %>
                                <% categories.forEach(cat => { %>
                                    <li>
                                        <div class="categories-item">
                                            <a href="/shop?category=<%= cat._id %>" class="text-dark">
                                                <i class="fas fa-angle-right me-2"></i> <%= cat.name %>
                                            </a>
                                        </div>
                                    </li>
                                <% }) %>
                            <% } %>
                        </ul>
                    </div>
                    
                    <!-- Static Sidebar Banner -->
                    <div class="mb-4">
                        <div class="position-relative">
                            <img src="/img/product-banner-2.jpg" class="img-fluid w-100 rounded" alt="">
                            <div class="text-center position-absolute d-flex flex-column align-items-center justify-content-center rounded p-4"
                                style="width: 100%; height: 100%; top: 0; right: 0; background: rgba(242, 139, 0, 0.3);">
                                <h5 class="display-6 text-primary">SALE</h5>
                                <h4 class="text-secondary">50% Off</h4>
                                <a href="/products" class="btn btn-primary rounded-pill px-4">Shop Now</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- MAIN PRODUCT DETAILS -->
                <div class="col-lg-9">
                    <div class="row g-4 single-product">
                        <div class="col-xl-6">
                            <div class="border rounded">
                                <img src="/uploads/productImages/<%= product.image %>" class="img-fluid rounded w-100" 
                                     alt="<%= product.name %>" style="max-height: 500px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <h4 class="fw-bold mb-3"><%= product.name %></h4>
                            <p class="mb-3">Category: <a href="/products?category=<%= product.category._id %>"><%= product.category.name %></a></p>
                            <h5 class="fw-bold mb-3 text-primary">$<%= product.price.toFixed(2) %></h5>
                            
                            <div class="d-flex mb-4">
                                <i class="fa fa-star text-secondary"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <i class="fa fa-star"></i>
                            </div>

                            <div class="mb-3">
                                <% if (product.quantity > 0) { %>
                                    <span class="badge bg-success">In Stock (<%= product.quantity %>)</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Out of Stock</span>
                                <% } %>
                            </div>

                            <p class="mb-4 text-muted"><%= product.description %></p>

                            <% if (product.quantity > 0) { %>
                                <form action="/my/cart/add" method="POST">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="btn btn-primary border border-secondary rounded-pill px-4 py-2 mb-4 text-primary">
                                        <i class="fa fa-shopping-bag me-2 text-white"></i> Add to cart
                                    </button>
                                </form>
                            <% } %>
                        </div>

                        <!-- TABS -->
                        <div class="col-lg-12">
                            <nav>
                                <div class="nav nav-tabs mb-3">
                                    <button class="nav-link active border-white border-bottom-0" data-bs-toggle="tab" data-bs-target="#nav-about">Description</button>
                                    <button class="nav-link border-white border-bottom-0" data-bs-toggle="tab" data-bs-target="#nav-reviews">Reviews</button>
                                </div>
                            </nav>
                            <div class="tab-content mb-5">
                                <div class="tab-pane active" id="nav-about">
                                    <p><%= product.description %></p>
                                </div>
                                <div class="tab-pane" id="nav-reviews">
                                    <p class="text-muted">No reviews yet.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Main Content -->

    <%- include('../layouts/footer') %>
    <%- include('../layouts/copyright') %>

    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>