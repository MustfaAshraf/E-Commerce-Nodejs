<!DOCTYPE html>
<html lang="en">

    <%- include('../layouts/head') %>

<body>

    <%- include('../layouts/spinner') %>
    <%- include('../layouts/topbar') %>
    <%- include('../layouts/navbar') %>

    <!-- Header -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">My Account</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active text-white">Profile</li>
        </ol>
    </div>

    <!-- Profile Section -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row g-4">
                
                <!-- LEFT SIDEBAR -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center p-5">
                            <div class="mx-auto mb-4" style="width: 120px; height: 120px; position: relative;">
                                <% if (user.avatar) { %>
                                    <!-- User has uploaded an image -->
                                    <img src="/uploads/userAvatars/<%= user.avatar %>" 
                                        class="rounded-circle border border-3 border-primary shadow-sm"
                                        style="width: 100%; height: 100%; object-fit: cover;" 
                                        alt="Avatar">
                                <% } else { %>
                                    <!-- Default Icon -->
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center border border-3 border-light" 
                                        style="width: 100%; height: 100%;">
                                        <i class="fas fa-user fa-4x text-primary"></i>
                                    </div>
                                <% } %>
                            </div>
                            <h4 class="mb-1"><%= user.name %></h4>
                            <p class="text-muted mb-4"><%= user.email %></p>
                            
                            <div class="d-grid gap-2">
                                <a href="/orders/my" class="btn btn-outline-primary rounded-pill">
                                    <i class="fas fa-box-open me-2"></i> My Orders
                                </a>
                                <a href="/auth/logout" class="btn btn-outline-danger rounded-pill">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RIGHT CONTENT (Edit Form) -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-4 px-4">
                            <h4 class="mb-0 text-primary">Profile Settings</h4>
                        </div>
                        <div class="card-body p-4">
                            
                            <!-- ALERTS -->
                            <% if (message) { %>
                                <div class="alert alert-success alert-dismissible fade show">
                                    <i class="fa fa-check-circle me-2"></i> <%= message %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>
                            <% if (error) { %>
                                <div class="alert alert-danger alert-dismissible fade show">
                                    <i class="fa fa-exclamation-circle me-2"></i> <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            <% } %>

                            <form action="/users/profile" method="POST" enctype="multipart/form-data"> <!-- Check your route prefix -->
                                <div class="row g-4">
                                    
                                    <!-- Personal Details -->
                                    <div class="col-12">
                                        <h5 class="text-muted border-bottom pb-2">Personal Information</h5>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="form-label">Profile Picture</label>
                                        <input type="file" name="avatar" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Full Name</label>
                                        <input type="text" name="name" class="form-control" value="<%= user.name %>" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Email Address</label>
                                        <input type="email" class="form-control bg-light" value="<%= user.email %>" readonly>
                                        <small class="text-muted">Email cannot be changed.</small>
                                    </div>

                                    <!-- Address Details -->
                                    <div class="col-12 mt-4">
                                        <h5 class="text-muted border-bottom pb-2">Shipping Address</h5>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Country</label>
                                        <input type="text" name="address[country]" class="form-control" value="<%= user.address ? user.address.country : '' %>">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">City</label>
                                        <input type="text" name="address[city]" class="form-control" value="<%= user.address ? user.address.city : '' %>">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Street / House No.</label>
                                        <input type="text" name="address[street]" class="form-control" value="<%= user.address ? user.address.street : '' %>">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Postal Code</label>
                                        <input type="text" name="address[postalCode]" class="form-control" value="<%= user.address ? user.address.postalCode : '' %>">
                                    </div>

                                    <!-- Submit -->
                                    <div class="col-12 mt-4 text-end">
                                        <button type="submit" class="btn btn-primary rounded-pill px-5 py-3">
                                            Update Profile
                                        </button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <%- include('../layouts/footer') %>
    <%- include('../layouts/copyright') %>

    <!-- JS Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>