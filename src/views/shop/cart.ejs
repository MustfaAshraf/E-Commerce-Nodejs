<!DOCTYPE html>
<html lang="en">

    <%- include('../layouts/head') %>

<body>

    <%- include('../layouts/spinner') %>

    <%- include('../layouts/topbar') %>

    <%- include('../layouts/navbar') %>

    <!-- Single Page Header start -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6 wow fadeInUp" data-wow-delay="0.1s">Cart Page</h1>
    </div>
    <!-- Single Page Header End -->

    <!-- Cart Page Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">Price</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Total</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if (cart && cart.items && cart.items.length) { %>
                            <% cart.items.forEach(item => { %>
                                <tr>
                                    <!-- Product Name -->
                                    <th scope="row">
                                        <p class="mb-0 py-4"><%= item.productId.name %></p>
                                    </th>

                                    <!-- Model -->
                                    <td>
                                        <p class="mb-0 py-4">
                                            <%= item.productId.model ? item.productId.description : "-" %>
                                        </p>
                                    </td>

                                    <!-- Price -->
                                    <td>
                                        <p class="mb-0 py-4">
                                            <%= item.productId.price.toFixed(2) %> $
                                        </p>
                                    </td>

                                    <!-- Quantity Controls -->
                                    <td>
                                        <div class="input-group quantity py-4" style="width: 100px;">
                                            <div class="input-group-btn">
                                                <form action="/my/cart/decrease/<%= item.productId._id %>" method="POST">
                                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                                        <i class="fa fa-minus"></i>
                                                    </button>
                                                </form>
                                            </div>

                                            <input 
                                                type="text" 
                                                class="form-control form-control-sm text-center border-0" 
                                                value="<%= item.quantity %>" 
                                                readonly
                                            >

                                            <div class="input-group-btn">
                                                <form action="/my/cart/increase/<%= item.productId._id %>" method="POST">
                                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Total for that item -->
                                    <td>
                                        <p class="mb-0 py-4">
                                            <%= (item.quantity * item.productId.price).toFixed(2) %> $
                                        </p>
                                    </td>

                                    <!-- Remove Item -->
                                    <td class="py-4">
                                        <form action="/my/cart/remove/<%= item.productId._id %>" method="POST">
                                            <button class="btn btn-md rounded-circle bg-light border">
                                                <i class="fa fa-times text-danger"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-4 text-muted">
                                    Your cart is empty
                                </td>
                            </tr>
                        <% } %>

                    </tbody>
                </table>
            </div>


            <div class="mt-5">
                <!-- Show coupon feedback -->
                <% if (couponStatus === "valid") { %>
                    <p class="text-success mb-2">Coupon applied successfully!</p>
                <% } else if (couponStatus === "invalid") { %>
                    <p class="text-danger mb-2">Invalid or expired coupon.</p>
                <% } else if (couponStatus === "error") { %>
                    <p class="text-danger mb-2">Something went wrong. Try again.</p>
                <% } %>

                <!-- Apply Coupon Form -->
                <form action="/my/cart/apply-coupon" method="POST" class="d-flex">

                    <input 
                        name="code"
                        type="text"
                        class="border-0 border-bottom rounded me-5 py-3 mb-4"
                        placeholder="Coupon Code"
                    >

                    <button class="btn btn-primary rounded-pill px-4 py-3 mb-4" type="submit">
                        Apply Coupon
                    </button>
                </form>
                <% if (cart && cart.coupon) { %>
                    <form action="/my/cart/apply-coupon" method="POST">
                        <input type="hidden" name="code" value="" />
                        <button class="btn btn-outline-danger btn-sm rounded-pill px-4 py-2">
                            Remove Coupon
                        </button>
                    </form>
                <% } %>
            </div>


            <div class="row g-4 justify-content-end">
                <div class="col-8"></div>
                <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                    <div class="bg-light rounded">

                        <div class="p-4">
                            <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>

                            <!-- Subtotal -->
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0 me-4">Subtotal:</h5>
                                <p class="mb-0">$<%= cart?.calculation?.subtotal.toFixed(2) %></p>
                            </div>

                            <!-- Coupon Discount -->
                            <% if (cart && cart.coupon && cart.calculation.discount > 0) { %>
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0 me-4 text-success">
                                        Discount (<%= cart.coupon.code %>)
                                    </h5>
                                    <p class="mb-0 text-success">- $<%= cart.calculation.discount.toFixed(2) %></p>
                                </div>
                            <% } %>

                            <!-- Shipping -->
                            <div class="d-flex justify-content-between">
                                <h5 class="mb-0 me-4">Shipping:</h5>
                                <p class="mb-0">$<%= cart.calculation.shipping.toFixed(2) %></p>
                            </div>
                        </div>

                        <!-- Total -->
                        <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                            <h5 class="mb-0 ps-4 me-4">Total</h5>
                            <p class="mb-0 pe-4">$<%= cart.calculation.total.toFixed(2) %></p>
                        </div>

                        <button class="btn btn-primary rounded-pill px-4 py-3 text-uppercase mb-4 ms-4"
                            type="button">Proceed Checkout</button>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Cart Page End -->

    <%- include('../layouts/footer') %>


    <%- include('../layouts/copyright') %>


    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
</body>

</html>